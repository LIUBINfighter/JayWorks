{
	"name": "jayworks-template",
	"version": "1.0.0",
	"description": "This is the JayWorks Template for Obsidian Plugin (https://obsidian.md)",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "npm run style && node esbuild.config.mjs",
		"build": "npm run style && tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"style": "npm run lint && npm run format && node ./scripts/merge-styles.js --dir src/styles",
		"mix": "node ./scripts/mix-code.js --dir ../src",
		"clean":"node ./scripts/clean.js",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint --ext .ts,.js src --max-warnings=0",
		"format": "eslint --ext .ts,.js src --fix"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"eslint": "^8.0.0",
		"eslint-config-prettier": "^8.0.0",
		"obsidian": "latest",
		"prettier": "^2.8.0",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"unified": "^11.0.4",
		"remark-parse": "^11.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-mdx": "^3.0.1",
		"remark-rehype": "^11.1.0",
		"rehype-react": "^8.0.0",
		"gray-matter": "^4.0.3"
	}
}
